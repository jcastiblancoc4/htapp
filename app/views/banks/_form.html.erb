<%= form_with(model: bank) do |form| %>
  <% if bank.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bank.errors.count, "error")  %> <%= I18n.t("bank.error_save") %> </h2>

      <ul>
        <% bank.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
